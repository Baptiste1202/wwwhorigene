<form id="multi-action-form" method="post">
    <div id="data-table-wrapper" class="sticky-wrapper">
        <table id="data-table-users" class="display datatableComponent nowrap" style="visibility: hidden;">
            <thead>
                <tr>
                    <th><input type="checkbox" id="select-all" /></th>
                    <th>ID</th>
                    <th>Email</th>
                    <th>Firstname</th>
                    <th>Lastname</th>
                    <th>Roles</th>
                    <th data-column="duplicate" class="no-sort"></th>
                    <th data-column="edit" class="no-sort"></th>
                    <th data-column="delete" class="no-sort"></th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                    <tr>
                        <td>
                            <input type="checkbox" name="selected_users[]" value="{{ user.id }}" class="select-checkbox" />
                        </td>
                        <td>{{ user.id }}</td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.firstname }}</td>
                        <td>{{ user.lastname }}</td>
                        <td>{{ user.roles|first }}</td>                       
                        <td>
                            <a href="{{ path('duplicate_user', {id: user.id}) }}"
                                class="button-crud"
                                title="Copy">
                                <i class="fa-solid fa-copy" aria-hidden="true"></i>
                            </a>
                        </td>

                        <td>
                            <a href="{{ path('edit_user', {id: user.id}) }}"
                                class="button-crud"
                                title="Modify">
                                <i class="fa-solid fa-pen-to-square" aria-hidden="true"></i>
                            </a>
                        </td>

                        <td>
                            <a href="{{ path('delete_user', {id: user.id}) }}"
                                class="delete-link button-crud"
                                title="Delete"
                                onclick="return confirm('Do you really want to delete this user?');">
                                <i class="fa-solid fa-trash" aria-hidden="true"></i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <input type="hidden" name="action" value="" />

    <!-- ✅ Bouton suppression multiple -->
    <button id="btn-delete-multiple"
            type="submit"
            formaction="{{ path('delete_multiple_users') }}"
            onclick="this.form.action.value='delete'"
            class="btn btn-danger"
            style="margin-top: 10px; display: none;">
        Delete selected
    </button>
</form>

