<form id="multi-action-form" method="post">
    <div id="data-table-wrapper" class="sticky-wrapper">
        <table id="data-table-samples" class="display datatableComponent nowrap" style="visibility: hidden;">
            <thead>
                <tr>
                    <th><input type="checkbox" id="select-all" /></th>
                    <th>ID</th>
                    <th>Date</th>
                    <th>Type</th>
                    <th>Country</th>
                    <th>City</th>
                    <th>Localisation</th>
                    <th>Under Localisation</th>
                    <th>GPS</th>
                    <th>Environnement</th>
                    <th>Other</th>
                    <th>Description</th>
                    <th>Comment</th>
                    <th>Creator</th> 
                    <th data-column="duplicate" class="no-sort"></th>
                    <th data-column="edit" class="no-sort"></th>
                    <th data-column="delete" class="no-sort"></th>
                </tr>
            </thead>
            <tbody>
                {% for sample in samples %}
                    <tr>
                        <td>
                            <input type="checkbox" name="selected_samples[]" value="{{ sample.id }}" class="select-checkbox" />
                        </td>
                        <td>{{ sample.id }}</td>
                        <td>{{ sample.date|date("d/m/Y") }}</td>
                        <td>{{ sample.type }}</td>
                        <td>{{ sample.country }}</td>
                        <td>{{ sample.city }}</td>
                        <td>{{ sample.localisation }}</td>
                        <td>{{ sample.underLocalisation }}</td>
                        <td>{{ sample.gps }}</td>
                        <td>{{ sample.environment }}</td>
                        <td>{{ sample.other }}</td>
                        <td>{{ sample.description }}</td>
                        <td>{{ sample.comment }}</td>
                        <td>{{ sample.user }}</td> <!-- ðŸŸ¢ Nouvelle colonne -->
                        
                        <td>
                            <a href="{{ path('duplicate_sample', { id: sample.id }) }}"
                                class="button-crud"
                                title="Copy">
                                <i class="fa-solid fa-copy" aria-hidden="true"></i>
                            </a>
                        </td>

                        <td>
                            <a href="{{ path('edit_sample', { id: sample.id }) }}"
                                class="button-crud"
                                title="Modifie">
                                <i class="fa-solid fa-pen-to-square" aria-hidden="true"></i>
                            </a>
                        </td>

                        <td>
                            <a href="{{ path('delete_sample', { id: sample.id }) }}"
                                class="delete-link button-crud"
                                title="Delete"
                                onclick="return confirm('Do you really want to delete?');">
                                <i class="fa-solid fa-trash" aria-hidden="true"></i>
                            </a>
                        </td>

                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <input type="hidden" name="action" value="" />

    <!-- âœ… Bouton suppression multiple -->
    <button id="btn-delete-multiple"
            type="submit"
            formaction="{{ path('delete_multiple_samples') }}"
            onclick="this.form.action.value='delete'"
            class="btn btn-danger"
            style="margin-top: 10px; display: none;">
        Delete selected
    </button>
</form>
