<!-- Multi-action form -->
<form id="multi-action-form-drugs" method="post">
    <div id="data-table-wrapper" class="sticky-wrapper">
        <table id="data-table-drugs" class="display datatableComponent nowrap" style="visibility: hidden;">
            <thead>
                <tr>
                    <th><input type="checkbox" id="select-all" /></th>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Type</th>
                    <th>Description</th>
                    <th>Comment</th>
                    <th data-column="duplicate" class="no-sort"></th>
                    <th data-column="edit" class="no-sort"></th>
                    <th data-column="delete" class="no-sort"></th>
                </tr>
            </thead>
            <tbody>
                {% for drug in drugs %}
                <tr>
                    <td>
                        <input type="checkbox" name="selected_drugs[]" value="{{ drug.id }}" class="select-checkbox" />
                    </td>
                    <td>{{ drug.id }}</td>
                    <td>{{ drug.name }}</td>
                    <td>{{ drug.type }}</td>
                    <td data-info="{{ drug.description is not null ? drug.description : '--' }}">
                        {{ drug.description is not null ? drug.description : '--' }}
                    </td>
                    <td data-info="{{ drug.comment is not null ? drug.comment : '--' }}">
                        {{ drug.comment is not null ? drug.comment : '--' }}
                    </td>
                    <td>
                        <a href="{{ path('duplicate_drug', {id: drug.id}) }}">Duplicate</a>
                    </td>
                    <td>
                        <a href="{{ path('edit_drug', {id: drug.id}) }}">Modifie</a>
                    </td>
                    <td>
                        <a href="{{ path('delete_drug', {id: drug.id}) }}"
                            class="delete-link"
                            title="Supprimer"
                            onclick="return confirm('Voulez-vous vraiment supprimer ?')">
                            Delete selected
                        </a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    
    <input type="hidden" name="action" value="" />
    <!-- Bouton suppression multiple -->
    <button id="btn-delete-multiple"
        type="submit"
        formaction="{{ path('delete_multiple_drugs') }}"
        onclick="this.form.action.value='delete'"
        class="btn btn-danger"
        style="margin-top: 10px; display: none;">
        Delete selected
    </button>
</form>
