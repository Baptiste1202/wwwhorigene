<script>

document.addEventListener('DOMContentLoaded', function () {
    const menuButton = document.getElementById('menu-button'); // Bouton pour afficher/masquer le menu
    const sideMenu = document.getElementById('filter-menu');     // Menu latéral
    const checkboxes = document.querySelectorAll('#filter-menu input[type="checkbox"]');
    const table = document.getElementById('data-table');

    // Ajout d'un événement de clic sur le bouton
    menuButton.addEventListener('click', function () {
        // Bascule la classe "visible" pour afficher ou masquer le menu
        sideMenu.classList.toggle('visible');
    });

        // Fonction pour afficher/masquer les colonnes
    function toggleColumns() {
        checkboxes.forEach(checkbox => {
            const column = checkbox.getAttribute('data-column-filter');
            const isVisible = checkbox.checked;

            // Récupère toutes les cellules (th + td) correspondant à cette colonne
            const cells = document.querySelectorAll(`[data-column="${column}"]`);

            cells.forEach(cell => {
                cell.style.display = isVisible ? '' : 'none';
            });
        });
    }

    // Ajout d'un écouteur d'événement sur chaque checkbox
    checkboxes.forEach(checkbox => {
        checkbox.addEventListener('change', toggleColumns);
    });

    // Appliquer l'affichage initial
    toggleColumns();
});
</script>