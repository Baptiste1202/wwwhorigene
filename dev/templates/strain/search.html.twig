{% extends 'layout.html.twig' %}

{% block title %}Strain Search{% endblock %}

{% block body %}
<div id="global">
    <h1>Search Strain</h1>

    {{ form_start(form) }}
        {{ form_widget(form) }}
    {{ form_end(form) }}

    {% if results is not null %}
        <h2>Results:</h2>
        <ul>
            {% for result in results %}
                <li>
                    Strain ID: {{ result.id }} 
                    {% if result.nameStrain is defined %}
                        - Name: {{ result.nameStrain }}
                    {% endif %}
                </li>
            {% endfor %}
        </ul>
        {% if results|length == 0 %}
            <p>No results found.</p>
        {% endif %}
    {% endif %}

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">{{ message }}</div>
    {% endfor %}
</div>
{% endblock %}