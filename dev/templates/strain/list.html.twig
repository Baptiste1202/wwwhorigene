                    <td class="name">{{ strain.nameStrain is not null ? strain.nameStrain : '--' }}</td>
                    <td class="date">
                    {% if strain.date is not null %}
                        {{strain.date|date("d/m/Y")}}
                    {% else %}
                        --
                    {% endif %}
                    </td>

                    <td class="specie">
                    {% if strain.specie is not null %}
                        {{strain.specie}}
                    {% else %}
