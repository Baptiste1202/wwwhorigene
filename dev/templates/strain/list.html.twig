                                    {% set maxLength = 10 %}

                                    {% if name|length > maxLength %}
                                        {% set prefix = name|slice(0, 12) %}
                                        {% set suffix = nameFile|slice(-10) %}
                                        {{ prefix ~ '...' ~ suffix }}
